{
  "openapi": "3.0.4",
  "info": {
    "title": "DockiUp.API",
    "version": "1.0"
  },
  "paths": {
    "/api/App/GetAppInfo": {
      "get": {
        "tags": [
          "App"
        ],
        "operationId": "GetAppInfo",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/AppInfoDto"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AppInfoDto"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/AppInfoDto"
                }
              }
            }
          }
        }
      }
    },
    "/api/Container/GetContainer": {
      "get": {
        "tags": [
          "Container"
        ],
        "operationId": "GetContainer",
        "parameters": [
          {
            "name": "containerId",
            "in": "query",
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ContainerDto"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ContainerDto"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ContainerDto"
                }
              }
            }
          }
        }
      }
    },
    "/api/Container/GetContainers": {
      "get": {
        "tags": [
          "Container"
        ],
        "operationId": "GetContainers",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ContainerDto"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ContainerDto"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ContainerDto"
                }
              }
            }
          }
        }
      }
    },
    "/api/Container/CreateContainer": {
      "post": {
        "tags": [
          "Container"
        ],
        "operationId": "CreateContainer",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SetupContainerDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/SetupContainerDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/SetupContainerDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ContainerDto"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ContainerDto"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ContainerDto"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "AppInfoDto": {
        "type": "object",
        "properties": {
          "version": {
            "type": "string",
            "nullable": true
          },
          "environment": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "ContainerDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "name": {
            "type": "string",
            "nullable": true
          },
          "containerName": {
            "type": "string",
            "nullable": true
          },
          "lastUpdated": {
            "type": "string",
            "format": "date-time"
          },
          "openPorts": {
            "type": "array",
            "items": {
              "type": "integer",
              "format": "int32"
            },
            "nullable": true
          },
          "containerState": {
            "$ref": "#/components/schemas/ContainerState"
          }
        },
        "additionalProperties": false
      },
      "ContainerOrigin": {
        "enum": [
          0,
          1,
          2
        ],
        "type": "integer",
        "format": "int32"
      },
      "ContainerState": {
        "enum": [
          0,
          1,
          2,
          3,
          4
        ],
        "type": "integer",
        "format": "int32"
      },
      "ContainerUpdateMethod": {
        "enum": [
          0,
          1,
          2,
          3
        ],
        "type": "integer",
        "format": "int32"
      },
      "SetupContainerDto": {
        "required": [
          "containerName",
          "containerOrigin",
          "updateMethod"
        ],
        "type": "object",
        "properties": {
          "containerName": {
            "type": "string",
            "nullable": true
          },
          "containerOrigin": {
            "$ref": "#/components/schemas/ContainerOrigin"
          },
          "updateMethod": {
            "$ref": "#/components/schemas/ContainerUpdateMethod"
          },
          "compose": {
            "type": "string",
            "nullable": true
          },
          "gitUrl": {
            "type": "string",
            "nullable": true
          },
          "path": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    }
  }
}